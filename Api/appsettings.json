{
  "ConnectionStrings": {
    "MyApiConnectionString": "Data Source = .;Initial Catalog = MyApiDB;Integrated Security = true",
    "LoggingConnectionString": "Data Source = .;Initial Catalog = MyApiDb-Logging;Integrated Security = true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "SiteSettings": {
    "ElmahPath": "/elmah-errors",
    "JwtSettings": {
      "SecretKey": "MySecretKey-Marketer",
      "EncriptKey": "16CharEncriptKey",
      "Issure": "MyApi-Marketer",
      "Audience": "MyApi-Marketer",
      "NotBeforMinutes": "0", //min
      "ExpirationMinutes": "11340", //min
      "ClockSkew": "5" //تلورانس زمانی برای انقضا توکن و شروع کار با توکن //min
    },
    "IdentitySettings": {
      "PasswordRequireDigit": "true",
      "PasswordRequiredLength": "5",
      "PasswordRequireNonAlphanumeric": "false",
      "PasswordRequireLowercase": "false",
      "PasswordRequireUppercase": "false",
      "userRequireUniqueEmail": "false",
      "SignInRequireConfirmedPhoneNumbe": "true",
      "LockOutMaxFailedAccessAttempts": "5",
      "LockOutAllowedForNewUsers": "false"
    }
  }
}
